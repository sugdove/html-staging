{
  // "extends": "", // 继承配置文件
  "compilerOptions": { // 编辑器选项配置
    // 'es3', 'es5', 'es6', 'es2015', 'es2016', 'es2017', 'es2018', 'es2019', 'es2020', 'es2021', 'es2022', 'esnext'
    "target": "es6", // 用于指定被编译成的ES版本 默认为ES3
    // 'none', 'commonjs', 'amd', 'system', 'umd', 'es6', 'es2015', 'es2020', 'es2022', 'esnext', 'node16', 'nodenext'
    "module": "es6", // 用于指定被编译成的模块化规范 版本
    // "lib": [ // 用于项目中要使用的库 一般不需要更改
    //   "dom"
    // ]
    // 将代码合并为一个文件
    // "outFile": "./dist/app.js",
    // allowJs 是否对js编译 默认false
    "allowJs": false,
    // checkJs 检查js代码是否符合规范 默认false
    "checkJs": false,
    // 是否移除注释 默认false
    "removeComments": true,
    // 不生成编译后的文件 默认false
    "noEmit": false,
    // 当有错误时不生成编译后文件 默认false
    "noEmitOnError": true,
    // 是否默认为严格模式
    "alwaysStrict": false,
  }
}